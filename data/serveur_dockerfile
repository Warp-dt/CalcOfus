# Utilisez une image Python comme base
FROM python:3.12

# Installer les dépendances nécessaires
RUN apt-get update && apt-get install -y \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


# Créez un répertoire de travail
WORKDIR /app

# Copier l'app
COPY CalcOfus/ .

# Installer les dépendances Python
RUN pip install --no-cache-dir -r requirements.txt

# Remplacer le fichier index.html de Streamlit
COPY CalcOfus/data/index.html /usr/local/lib/python3.12/site-packages/streamlit/static/index.html

# Exposer le port utilisé par Streamlit
EXPOSE 8501
#EXPOSE 8080

# Commande par défaut pour lancer Streamlit
CMD ["streamlit", "run", "calcofus_web_app.py", "--server.port=8501", "--server.address=0.0.0.0"]